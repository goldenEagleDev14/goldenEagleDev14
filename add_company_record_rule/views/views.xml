<odoo>
  <data>
    <!-- Inherit Form View to Modify it -->
    <record id="project_phase_inherited" model="ir.ui.view">
        <field name="name">project.phase.inherited</field>
        <field name="model">project.phase</field>
        <field name="inherit_id" ref="add_real_estate.phase_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='project_id']" position="after">
              <field name="company"/>
            </xpath>

        </field>
    </record>
