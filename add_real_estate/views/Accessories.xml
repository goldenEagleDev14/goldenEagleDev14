<odoo>
    <data>
        <record id="Accessories_form_view" model="ir.ui.view">
            <field name="name">res.reservation</field>
            <field name="model">res.reservation</field>
            <field name="arch" type="xml">
                <form string="Reservation Form">
                    <header>
                        <button name="convert_to_draft" type="object" string="Set To Draft" attrs="{'invisible': [('state', 'not in', ['reserved','blocked'])]}"/>
                                    <button name="%(add_real_estate.action_cancel_res)d" string="Canceled" type="action"
                            help="Canceled" class="oe_highlight" attrs="{'invisible': [('state', 'not in', ['reserved','draft'])]}"/>
<!--                        <button name="convert_to_block" type="object" string="Canceled" attrs="{'invisible': [('state', 'not in', ['reserved','draft'])]}"/>-->
                        <button name="convert_to_reserved" type="object" string="Confirm" attrs="{'invisible': [('state', '!=', 'draft')]}" status="draft"/>
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button type="object" class="oe_stat_button" icon="fa-pencil-square-o" name="action_view_contract_reservation"
                                >
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_value">
                                            <field name="counter_contract"/>
                                    </span>
                                    <span class="o_stat_text">Contracts</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title" >

                            <h2><field name="accessories_code" placeholder="Accessories Code"/></h2>
                            <h2><field name="payment_code"  invisible="1" /></h2>
                    </div>
                        <group>
                            <group colspan="1" string="Property Details">
                            <field name="is_create_contract"  />
                            <field name="custom_type"   />
                            <field name="date" required="1" attrs="{'readonly' : [('state', 'in', ['reserved','release'])]}" optional="{'datepicker':{'minDate': 0}}" />
                            <field name="related_res_id" required="1" />
                            <field name="related_unit_id" readonly="1" force_save="1" />
                            <field name="project_id" readonly="1" force_save="1"  attrs="{'readonly' : [('state', 'in',['contracted','release'] )]}" />
                            <field name="phase_id" readonly="1" force_save="1"  attrs="{'readonly' : [('state', 'in',['contracted','release'] )]}" />
                            <field name="property_id"  string="Accessories" optional="{'no_quick_create': True, 'no_create_edit' : True,'on_open   ' : True}" domain="[('state','=','available')]"/>
                            <field name="property_code"  />
                            <field name="finish_of_property_id"  />
                            <field name="is_release"  readonly="1"  />
                            <field name="odoo_reservation_id"  attrs="{'invisible' : [('is_release', '=',False)]}"  />
                            <field name="property_price"  />
                            <field name="payment_due"  />
                            <field name="payment_lines"  readonly="1"  force_save="1"/>
                            <field name="more_discount"  />
                            <field name="amount_discount"  />
                            <field name="net_price"  />
                        </group>
<!--                        <group colspan="1" string="Sales Details">-->
<!--                            <field name="sales_type" attrs="{'readonly' : [('state', 'in',['contracted','release'] )]}"/>-->
<!--                            <field name="broker_id"-->
<!--                                   attrs="{'invisible' : [('sales_type', '=', 'direct')]}"-->
<!--                                       optional="{'no_create': True,'no_open': True}" domain="[('is_broker','=',True)]"/>-->
<!--                        </group>-->

                        </group>
                                                <group>
                            <group colspan="2" string="Payment Details">
                            <field name="pay_strategy_id" attrs="{'readonly' : ['|',('is_Custom_payment','=',True),('state', 'in',['reserved','release'] )]}"/>
                            <field name="payment_strg_name"/>
                            <field name="payment_term_discount"/>
                            <field name="is_Custom_payment"/>
                            <field name="Description_payment"/>
                        </group>
                        </group>
                        <group>
                            <group colspan="1" string="Customer Details">
                                <field name="customer_id"  readonly="1" force_save="1" attrs="{'readonly' : [('state', 'in',['contracted','release'] )]}"/>
                                <field name="address"
                                       readonly="1"/>
                                <field name="phone"
                                       readonly="1"/>
                                <field name="mobile"
                                       readonly="1"/>
                                <field name="email"
                                       readonly="1"/>
                                <field name="nationality"
                                       readonly="1"/>
                                <field name="id_def"
                                       readonly="1"/>
                                <field name="social_status"
                                       readonly="1"/>
                            </group>
                        <group colspan="1" string="Sales Details">
                            <field name="sale_person_2_id" readonly="1" force_save="1" attrs="{'readonly' : [('state', 'in',['contracted','release'] )]}"/>
<!--                            <field name="lead_id"/>-->

                        </group>

                        </group>

                        <group string="Attachments" style="color:#893b74;"/>
                        <group >
                            <field name="id_no"
                                   attrs="{'readonly' : [('state', 'in',['contracted','release'] )]}"/>
                            <field name="id_type"
                                   attrs="{'readonly' : [('state', 'in',['contracted','release'] )]}"/>
                            <field name="id_photo"
                                   attrs="{'readonly' : [('state', 'in',['contracted','release'] )]}"/>
                        </group>
                                                <notebook>
                            <page name="payment" string="Payment">
                                <group colspan="2">
                            <field name="bank_name" attrs="{'readonly' : [('state', 'in',['contracted','release'] )]}"/>
                            <field name="start_cheque" attrs="{'readonly' : [('state', 'in',['contracted','release'] )]}"/>
                            <field name="end_cheque" attrs="{'readonly' : [('state', 'in',['contracted','release'] )]}"/>
                            <field name="date_start_installment" attrs="{'readonly' : [('state', 'in',['contracted','release'] )]}"/>
                            <button name="update_bank_data" type="object" string="Update Bank and check Number"  />
                            <field name="amount_ins" attrs="{'readonly' : [('state', 'in',['contracted','release'] )]}"/>
<!--                            <field name="number_day"/>-->
                            <button name="update_ins_amount_data" type="object" string="Update Amount Ins"  />
                            <field name="receipt_date" attrs="{'readonly' : [('state', 'in',['contracted','release'] )]}"/>
<!--                            <field name="number_day"/>-->
                            <button name="update_ins_receipt_date" type="object" string="Update Receipt Date Ins"  />


                                </group>
                                                                <ul class="list-inline">
                                    <li class="list-inline-item"><button groups="add_real_estate.group_create_payment_Reservation" name="create_payment_lines_selected" type="object" string="Create Payment" class="btn btn-primary"/></li>
                                    <li class="list-inline-item"><button groups="add_real_estate.group_Delete_Reservation" name="button_delete_lines_selected" type="object" string="Delete" class="btn btn-primary"/></li>
                                    <li class="list-inline-item"><button groups="add_real_estate.group_Receive_Reservation" name="button_receive_lines_selected" type="object" string="Receive" class="btn btn-primary"/></li>
                                    <li class="list-inline-item"><button groups="add_real_estate.group_Print_Reservation" name="generate_report" type="object" string="Print"  class="btn btn-primary"/></li>
                                </ul>
                                                                                                <field name="is_select_all"/>

                                <field name="payment_strg_ids"
                                       widget="section_and_note_one2many"
                                       mode="tree,kanban"
                                       class="oe_inline oe_no_button"
                                       context="{'default_project_id':project_id}"
attrs="{'readonly' : [('state', 'in',['contracted','release'] )]}"
                                >
                                    <tree string="payment"
                                          editable="buttom"
                                          colors="red:move_check == True;green:cancelled == True">
                                        <field name="is_selected_to_action" />
                                        <field name="is_no_enter_total" />
                                        <field name="is_print" />
                                        <field name="payment_code" readonly="1"/>
                                        <field name="receipt_date" />
                                        <field name="move_check"
                                               invisible="1" optional="show"/>
                                        <field name="project_id"
                                               invisible="1" optional="show"/>
                                        <field name="payment_method_id"
                                               invisible="1" optional="show"/>
                                        <field name="type"
                                               invisible="1" optional="show"/>
                                        <field name="cancelled"
                                               invisible="1" optional="show"/>
                                        <field name="description"
                                               attrs="{'readonly':[('move_check','=',True)]}" optional="show"/>
                                        <field name="amount"
                                               attrs="{'readonly':[('move_check','=',True)]}" sum="Amount" optional="show"/>
                                        <field name="base_amount" forec_save="1" string="Amount Base" optional="hide"/>
                                        <field name="amount_due"
                                               readonly="1" sum="Amount Due" optional="show"/>
                                        <field name="amount_pay"
                                               readonly="1" sum="Pay" optional="show"/>
                                        <field name="payment_date"
                                               attrs="{'readonly':[('move_check','=',True)]}"  optional="show"/>
                                        <field name="journal_id"
                                               domain="[('type','in',['bank', 'cash'])]"
                                               string="Payment Method"
                                               attrs="{'readonly' : [('move_check', '=', True)]}"  optional="show"/>
                                        <field name="state_payment"
                                               string="State Payment"  optional="show" required="1"/>

                                        <field name="bank_name" attrs="{'readonly' : [('type','in',['cash'])]}"  optional="show"/>
                                        <field name="cheque" attrs="{'readonly' : [('type','in',['cash'])]}"  optional="show"/>
                                        <field name="deposite"
                                               attrs="{'readonly':[('move_check','=',True)]}"  optional="show"/>
                                        <field name="is_maintainance"  optional="show"/>
                                        <field name="is_no_enter_total"  optional="show"/>

<!--                                        <field name="add_extension"-->
<!--                                               attrs="{'readonly':[('move_check','=',True)]}"/>-->
<!--                                        <field name="maintainance_fees"-->
<!--                                               />-->
                                        <field name="is_receive"   optional="show"/>
<!--                                        <field name="move_id"-->
<!--                                               readonly="1"/>-->
<!--                                        <field name="cheque_status" invisible="1"/>-->
                                        <field name="is_pay" readonly="1"   optional="show"/>
                                        <field name="bank_ids" widget="many2many_tags"   optional="show" />
                                        <field name="payments_ids" widget="many2many_tags"   optional="show" />
                                        <field name="state"    optional="show" />
<!--                                        <button type="object"-->
<!--                                                name="create_deposite_entry"-->
<!--                                                string="Pay"-->
<!--                                                class="oe_highlight"-->
<!--                                                />-->

                                    </tree>
                                </field>

                                <group class="oe_right">
                                    <group class="oe_subtotal_footer" >
                                        <field name="amount_total" class="oe_subtotal_footer_separator"/>
                                        <field name="main_total" class="oe_subtotal_footer_separator"/>
                                        <field name="amount_residual" class="oe_subtotal_footer_separator" />
                                        <field name="amount_cheques" class="oe_subtotal_footer_separator"  invisible="1"/>
                                    </group>

                                </group>

                            </page>
                                                    <page string="Notes">
                                                        <group>
                                                            <field name="notes_cash"/>
                                                            <field name="notes_visa"/>
                                                            <field name="notes_cheque"/>
                                                            <field name="notes_bank"/>
                                                        </group>
                                                    </page>
                                                    <page string="Cancel Reasons" attrs="{'invisible' : [('state', 'not in',['blocked'] )]}">
                                                        <group>
                                                            <field name="reason"/>
                                                        </group>
                                                    </page>
                                                    </notebook>
                    </sheet>
                                    <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>
        <record id="Accessories_tree_view" model="ir.ui.view">
            <field name="name">res.reservation.reservation.tree view</field>
            <field name="model">res.reservation</field>
            <field name="arch" type="xml">
                <tree string="Amendment">
                    <field name="date"/>
                    <field name="accessories_code"/>
<!--                    <field name="name"/>-->
                    <field name="customer_id"/>
                    <field name="sale_person_2_id"/>
                    <field name="sales_type"/>
                    <field name="sales_type"/>
                    <field name="broker_id"/>
                    <field name="property_id" string="Accessories"/>
                    <field name="project_id"/>
                    <field name="related_res_id"/>
                    <field name="related_unit_id"/>
                    <field name="phase_id"/>
                    <field name="property_price"/>
                    <field name="net_price"/>
                    <field name="state"/>                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="accessories_list_action">
            <field name="name">Amendments</field>
            <field name="res_model">res.reservation</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('custom_type','=','Accessories')]</field>
            <field name="context">{
                    'default_custom_type': 'Accessories',
            }</field>
             <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('Accessories_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('Accessories_form_view')})]"/>
        </record>
        <menuitem id="res_Accessories"
                  name="Amendments"
                  parent="transaction_sub"
                  action="accessories_list_action" sequence="2"/>



    </data>
</odoo>